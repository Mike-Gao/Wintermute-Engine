#include "scripts\base.inc"


////////////////////////////////////////////////////////////////////////////////
on "LookAt"
{
  GoToObject();
  actor.Talk("Nice view!");
}

////////////////////////////////////////////////////////////////////////////////
on "Take"
{
  GoToObject();
  actor.Talk("No, I think I'll leave it closed.");
}

////////////////////////////////////////////////////////////////////////////////
on "LeftClick"
{
  GoToObject();
}


////////////////////////////////////////////////////////////////////////////////
function GoToObject()
{
  actor.GoTo(727, 424);
  actor.TurnTo(DI_UPRIGHT);
}
