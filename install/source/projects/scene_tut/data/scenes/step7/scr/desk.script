#include "scripts\base.inc"


////////////////////////////////////////////////////////////////////////////////
on "LookAt"
{
  GoToObject();
  actor.Talk("It's a sturdy looking desk.");
}


////////////////////////////////////////////////////////////////////////////////
on "Take"
{
  GoToObject();
  actor.Talk("The desk is a bit too heavy for a poor little me...");
}


////////////////////////////////////////////////////////////////////////////////
on "LeftClick"
{
  GoToObject();
}


////////////////////////////////////////////////////////////////////////////////
function GoToObject()
{
  actor.GoTo(544, 638);
  actor.TurnTo(DI_UPRIGHT);
}
